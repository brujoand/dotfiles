[alias]
   co = checkout
   ci = commit
   st = status
   df = diff
   who = shortlog --summary --numbered
   fileblame = log --diff-filter=A --pretty=short --
   lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
   lol = log --pretty=oneline --abbrev-commit --graph --decorate

[apply]
  whitespace = fix

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  showbranch = auto
  ui = auto

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[bash]
  showDirtyState = true
  showUnpushed = true

[difftool]
  prompt = true
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
  path = nvim
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
  default = simple
[core]
  editor = nvim
  fsmonitor = false

[includeIf "gitdir:~/src/piano/cxense/platform/cx"]
  path = ~/.gitrc/git-cx
[includeIf "gitdir:~/src/cxense/"]
  path = ~/.gitrc/git-piano
[includeIf "gitdir:~/src/piano/"]
  path = ~/.gitrc/git-piano
[includeIf "gitdir:~/src/brujoand/"]
  path = ~/.gitrc/git-brujoand

[init]
  templatedir = ~/.gitrc/template
[pull]
  rebase = false
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
